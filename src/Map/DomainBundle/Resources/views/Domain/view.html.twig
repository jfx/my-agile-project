{% extends 'MapCoreBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Domain view - Id : {{ domain.id }}{% endblock title %}

{% block headline %}Admin > View domain{% endblock headline %}

{% block content %}
<ul class="nav nav-tabs">
    <li class="active"><a id="a_main" href="#">Main</a></li>
    <li><a id="a_projects" href="{{ path('dm-project_index') }}"><span id="badge_projects" class="badge badge-info">{{ child.projects }}</span>&nbsp;&nbsp;Projects</a></li>
    <li><a id="a_resources" href="{{ path('dm-resource_index') }}"><span id="badge_resources" class="badge badge-info">{{ child.resources }}</span>&nbsp;&nbsp;Resources</a></li>
</ul>
<div class="span8">
    <form class="form-horizontal well">

        {% include "MapDomainBundle:Domain:formread.html.twig" %}

    </form>
</div>
<div class="span8">
<a href="{{ path('domain_index') }}" class="btn" title="Return to list">
<i class="icon-chevron-left"></i>
Return to list
</a>
{% if (is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_DM_MANAGER')) %}
    <a href="{{ path('domain_edit', {'id': domain.id}) }}"
    class="btn" title="Edit">
        <i class="icon-edit"></i>
    Edit
    </a>
{% endif %}
</div>
{% endblock content %}
