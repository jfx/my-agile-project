{% extends 'MapCoreBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Application view - Id : {{ application.id }}{% endblock title %}

{% block headline %}Admin > Application view - Id : {{ application.id }}{% endblock headline %}

{% block content %}
<div class="span8">
    <form class="form-horizontal well">
        
        {% include "MapAdminBundle:Application:formread.html.twig" %}
    
    </form>
</div>
<div class="span8">
<a href="{{ path('adminApplication_index') }}" class="btn">
<i class="icon-chevron-left"></i>
Return to list
</a>
{% if is_granted('ROLE_SUPER_ADMIN') %}
    <a href="{{ path('adminApplication_edit', {'id': application.id}) }}"
    class="btn">
        <i class="icon-edit"></i>
    Edit
    </a>
{% endif %}
</div>
{% endblock content %}