<div class="control-group">
    <label class="control-label" for="inputFirstname">Firstname</label>
    <div class="controls">
        <span  id="inputFirstname" class="input-xlarge uneditable-input">{{ user.firstname }}</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="inputName">Name</label>
    <div class="controls">
        <span  id="inputName" class="input-xlarge uneditable-input">{{ user.name }}</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="inputDisplayname">Displayname</label>
    <div class="controls">
        <span  id="inputDisplayname" class="input-xlarge uneditable-input">{{ user.displayname }}</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="inputUsername">Username</label>
    <div class="controls">
        <span  id="inputUsername" class="input-xlarge uneditable-input">{{ user.username }}</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="inputEmail">Email</label>
    <div class="controls">
        <span  id="inputEmail" class="input-xlarge uneditable-input">{{ user.email }}</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="inputSuperAdmin">Super-admin</label>
    <div class="controls">
        <input type="checkbox" id="inputSuperAdmin" name="inputSuperAdmin" class="" value="{{ user.superadmin }}"
             {% if user.superadmin %} checked="checked" {% endif %} disabled="disabled"/>
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="textDetails">Details</label>
    <div class="controls">
        <textarea id="textDetails" class="input-xxlarge uneditable-textarea" rows="4">{{ user.details }}</textarea>
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="inputLocked">Locked</label>
    <div class="controls">
        <input type="checkbox" id="inputLocked" name="inputLocked" class="" value="{{ user.locked }}"
             {% if user.locked %} checked="checked" {% endif %} disabled="disabled"/>
    </div>
</div>
