{% extends 'MapCoreBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Change password{% endblock title %}

{% block headline %}Admin > Change password{% endblock headline %}

{% block content %}
<div class="span8">
    <form class="form-horizontal well" method="post">
        {{ form_widget(form) }}
        <div class="center">
            <button type="submit" class="btn btn-small btn-info"><i class="icon-ok icon-white"></i>&nbsp;&nbsp;Save&nbsp;&nbsp;</button>
        </div>
    </form>
</div>
<div class="span8">
    <a href="{{ path('user_profile') }}" class="btn">
        <i class="icon-chevron-left"></i>
        Return to profile
    </a>
</div>
{% endblock content %}
